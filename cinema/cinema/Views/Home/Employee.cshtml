
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Homepagina";
}

<h1>Medewerker Dashboard</h1>

<div class="row">
    @{
        foreach(string[] action in ViewBag.Actions)
        {
            string name = action[0];
            string controller = action[1];
            string act = action[2];
            <div class="float-left" style="width:25%;height:100px;">
                <div class="border border-light" style="height:80%;">
                    <div class="mx-auto text-center">
                        <a class="nav-link" asp-controller="@controller" asp-action="@act"><h4>@name</h4></a>
                    </div>
                </div>
            </div>
        }
    }
</div>