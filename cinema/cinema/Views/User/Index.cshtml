@model IEnumerable<CinemaIdentityUser>
@{
    ViewData["Title"] = "Index";
}
<h1>Gebruikers</h1>
<a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/RegisterWithRole">Nieuwe gebruiker</a>
<table class="table table-bordered text-white">
    <thead>
        <tr>
            <td></td>
            <td>Voornaam</td>
            <td>Achternaam</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a asp-action="Delete" asp-route-id="@user.Id"><b>X</b></a></td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>